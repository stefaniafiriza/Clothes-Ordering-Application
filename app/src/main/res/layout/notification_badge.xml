<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="?attr/actionBarSize"
    android:layout_height="?attr/actionBarSize">

    <ImageView
        android:layout_width="@dimen/basket_icon_size"
        android:layout_height="@dimen/basket_icon_size"
        android:src="@drawable/ic_shopping_basket"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/badge_counter"
        android:layout_width="@dimen/badge_size"
        android:layout_height="@dimen/badge_size"
        android:background="@drawable/badge"
        android:text="12"
        android:textSize="10sp"
        android:textColor="#F0FFFF"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"/>
</FrameLayout>