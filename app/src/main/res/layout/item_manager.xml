<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/c1_man"
            android:layout_width="160dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/todo14" />

        <ImageView
            android:id="@+id/c2_man"
            android:layout_width="160dp"
            android:layout_height="110dp"
            android:layout_marginEnd="23dp"
            android:layout_toEndOf="@+id/c1_man"
            android:contentDescription="@string/todo14" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/edit_man1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/bnt_bg_white"
            android:contentDescription="@string/todo14"
            android:src="@drawable/ic_add_black" />

        <ImageButton
            android:id="@+id/remove_man1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:background="@drawable/bnt_bg_white"
            android:contentDescription="@string/todo14"
            android:src="@drawable/ic_add_black" />

        <ImageButton
            android:id="@+id/edit_man2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:background="@drawable/bnt_bg_white"
            android:contentDescription="@string/todo14"
            android:layout_toEndOf="@+id/remove_man1"
            android:src="@drawable/ic_add_black" />

        <ImageButton
            android:id="@+id/remove_man2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_toEndOf="@+id/edit_man2"
            android:background="@drawable/bnt_bg_white"
            android:contentDescription="@string/todo14"
            android:src="@drawable/ic_add_black" />

    </RelativeLayout>

</LinearLayout>