<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/c1_acc"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:contentDescription="@string/todo14" />

        <ImageView
            android:id="@+id/c2_acc"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="23dp"
            android:layout_toEndOf="@+id/c1_acc"
            android:contentDescription="@string/todo14" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price_acc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/add_acc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_toEndOf="@+id/price_acc1"
            android:background="@drawable/bnt_bg_white"
            android:contentDescription="@string/todo14"
            android:src="@drawable/ic_add_black" />

        <TextView
            android:id="@+id/price_acc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/add_acc1"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/add_acc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_toEndOf="@+id/price_acc2"
            android:background="@drawable/bnt_bg_white"
            android:contentDescription="@string/todo14"
            android:src="@drawable/ic_add_black" />

    </RelativeLayout>
</LinearLayout>
