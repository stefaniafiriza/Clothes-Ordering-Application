<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SaleActivity">

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="@string/magazzino"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />


    <SearchView
        android:id="@+id/search3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bar_search"
        android:queryHint="ITEMS SEARCH"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        app:layout_constraintVertical_bias="0.049" />

    <View
        android:id="@+id/l3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#000"
        app:layout_constraintEnd_toEndOf="@+id/search3"
        app:layout_constraintStart_toStartOf="@+id/search3"
        app:layout_constraintTop_toBottomOf="@+id/search3"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/l3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:text="@string/sale"
                android:textColor="#A91101"
                android:textSize="25sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bl1"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/todo14"
                    android:src="@drawable/bl1" />

                <ImageView
                    android:id="@+id/bl2"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_marginEnd="23dp"
                    android:layout_toEndOf="@+id/bl1"
                    android:contentDescription="@string/todo14"
                    android:src="@drawable/bl2" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bl3"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/todo14"
                    android:src="@drawable/bl3" />

                <ImageView
                    android:id="@+id/bl4"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_marginEnd="23dp"
                    android:layout_toEndOf="@+id/bl3"
                    android:contentDescription="@string/todo14"
                    android:src="@drawable/bl4" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bl5"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/todo14"
                    android:src="@drawable/bl5" />

                <ImageView
                    android:id="@+id/bl6"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_marginEnd="23dp"
                    android:layout_toEndOf="@+id/bl5"
                    android:contentDescription="@string/todo14"
                    android:src="@drawable/bl6" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gh1"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/todo14"
                    android:src="@drawable/gh1" />

                <ImageView
                    android:id="@+id/gh2"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_marginEnd="23dp"
                    android:layout_toEndOf="@+id/gh1"
                    android:contentDescription="@string/todo14"
                    android:src="@drawable/gh2" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gh3"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/todo14"
                    android:src="@drawable/gh3" />

                <ImageView
                    android:id="@+id/gh4"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_marginEnd="23dp"
                    android:layout_toEndOf="@+id/gh3"
                    android:contentDescription="@string/todo14"
                    android:src="@drawable/gh4" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/p1"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/todo14"
                    android:src="@drawable/p1" />

                <ImageView
                    android:id="@+id/p2"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_marginEnd="23dp"
                    android:layout_toEndOf="@+id/p1"
                    android:contentDescription="@string/todo14"
                    android:src="@drawable/p2" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/p3"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/todo14"
                    android:src="@drawable/p3" />

                <ImageView
                    android:id="@+id/p4"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_marginEnd="23dp"
                    android:layout_toEndOf="@+id/p3"
                    android:contentDescription="@string/todo14"
                    android:src="@drawable/p4" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/p5"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/todo14"
                    android:src="@drawable/p5" />

                <ImageView
                    android:id="@+id/p6"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_marginEnd="23dp"
                    android:layout_toEndOf="@+id/p5"
                    android:contentDescription="@string/todo14"
                    android:src="@drawable/p6" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/p7"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/todo14"
                    android:src="@drawable/p7" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>